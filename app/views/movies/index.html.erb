<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Movies</h1>
  <div class="mt-4"></div>
    <td><%= link_to "New movie", new_movie_path, class: "btn btn-primary" %></td>
  </div>
  <hr>
  <div id="movies">
    <div class="row">
      <% @movies.each do |movie| %>
        <%= render movie %>
      <% end %>
    </div>
  </div>
</div>
  <div class="mt-4">
        <%= paginate @movies %> 
  </div>